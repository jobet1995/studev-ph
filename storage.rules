rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}_{timestamp}_{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == userId;
    }
    
    match /covers/{userId}_{timestamp}_{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == userId;
    }
    
    // Allow read access to all files (for displaying images)
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}