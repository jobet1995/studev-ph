{
  "$schema": "https://unpkg.com/graphql-config/lib/config-schema.json",
  "projects": {
    "default": {
      "schema": "./app/api/graphql/schema.graphql",
      "documents": [
        "./app/**/*.graphql",
        "./app/**/*.ts",
        "./app/**/*.tsx"
      ],
      "extensions": {
        "endpoints": {
          "default": {
            "url": "http://localhost:3000/api/graphql",
            "headers": {
              "user-agent": "JS GraphQL"
            }
          },
          "production": {
            "url": "https://your-production-url.com/api/graphql"
          }
        },
        "codegen": {
          "generates": {
            "./generated/graphql.ts": {
              "plugins": [
                "typescript",
                "typescript-resolvers"
              ]
            }
          }
        }
      }
    }
  }
}